# =============================================================================
# Investment Agent System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=investment-agent-system
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/investment_agents
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=investment_agents
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key for internal service communication
INTERNAL_API_KEY=your-internal-api-key

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Perplexity (for deep research)
SONAR_API_KEY=your-perplexity-api-key
PERPLEXITY_MODEL=sonar-pro

# Default LLM Provider
DEFAULT_LLM_PROVIDER=openai  # openai, anthropic, gemini, perplexity

# -----------------------------------------------------------------------------
# Financial Data Provider API Keys
# -----------------------------------------------------------------------------
# Polygon.io (Market Data)
POLYGON_API_KEY=your-polygon-api-key

# Financial Modeling Prep (Fundamentals)
FMP_API_KEY=your-fmp-api-key

# Alpha Vantage (Alternative)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Quandl/Nasdaq Data Link
QUANDL_API_KEY=your-quandl-api-key

# -----------------------------------------------------------------------------
# SEC EDGAR Configuration
# -----------------------------------------------------------------------------
SEC_USER_AGENT=YourCompany contact@yourcompany.com
SEC_RATE_LIMIT=10  # requests per second

# -----------------------------------------------------------------------------
# Macro Data Providers
# -----------------------------------------------------------------------------
# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your-fred-api-key

# Trading Economics
TRADING_ECONOMICS_API_KEY=your-trading-economics-api-key

# -----------------------------------------------------------------------------
# News & Alternative Data
# -----------------------------------------------------------------------------
# NewsAPI
NEWSAPI_KEY=your-newsapi-key

# Benzinga
BENZINGA_API_KEY=your-benzinga-api-key

# Reddit (for sentiment analysis)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=InvestmentAgentSystem/1.0

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# -----------------------------------------------------------------------------
# ElevenLabs (Text-to-Speech for reports)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# Workflow Engine (Prefect)
# -----------------------------------------------------------------------------
PREFECT_API_URL=http://prefect-server:4200/api
PREFECT_API_KEY=

# -----------------------------------------------------------------------------
# Object Storage (S3/MinIO)
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=investment-agents
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (Error Tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Email Configuration (for alerts)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Investment Agent System <alerts@yourdomain.com>

# -----------------------------------------------------------------------------
# Cloud Provider (DigitalOcean)
# -----------------------------------------------------------------------------
DO_TOKEN=your-digitalocean-token
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=investment-agents

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Agent task queue settings
AGENT_TASK_TIMEOUT=300  # seconds
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=30  # seconds

# Rate limiting
AGENT_RATE_LIMIT_REQUESTS=100
AGENT_RATE_LIMIT_PERIOD=60  # seconds

# -----------------------------------------------------------------------------
# Research Configuration
# -----------------------------------------------------------------------------
# Default research depth
DEFAULT_RESEARCH_TYPE=standard  # quick, standard, deep

# Maximum concurrent research projects
MAX_CONCURRENT_RESEARCH=5

# Research cache TTL (seconds)
RESEARCH_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws
