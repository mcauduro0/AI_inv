# =============================================================================
# Investment Agent System - PRODUCTION Environment Configuration
# =============================================================================
# IMPORTANT: This file contains PLACEHOLDERS for sensitive values.
# Fill in your actual API keys before deploying to production.
# Store secrets securely using a secrets manager (e.g., DigitalOcean Secrets,
# Kubernetes Secrets, HashiCorp Vault, or environment variables).
# =============================================================================

# Application Settings
APP_NAME=investment-agent-system
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION (DigitalOcean Managed Database)
# These values will be provided by Terraform after provisioning
# =============================================================================
DATABASE_URL=postgresql://doadmin:YOUR_DB_PASSWORD@YOUR_DB_HOST:25060/investment_agents?sslmode=require
DATABASE_HOST=YOUR_DB_HOST
DATABASE_PORT=25060
DATABASE_NAME=investment_agents
DATABASE_USER=doadmin
DATABASE_PASSWORD=YOUR_DB_PASSWORD

# =============================================================================
# REDIS CONFIGURATION (DigitalOcean Managed Redis)
# These values will be provided by Terraform after provisioning
# =============================================================================
REDIS_URL=rediss://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:25061
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=25061
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0

# =============================================================================
# VECTOR DATABASE (Qdrant - Self-hosted on K8s)
# =============================================================================
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================================================
# AUTHENTICATION
# IMPORTANT: Generate strong random secrets for production!
# Use: openssl rand -base64 32
# =============================================================================
JWT_SECRET=GENERATE_A_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
INTERNAL_API_KEY=GENERATE_A_STRONG_RANDOM_API_KEY

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================

# OpenAI API (GPT-4, GPT-5)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API (Claude 3)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini API
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-2.5-flash

# Perplexity API (Sonar - Real-time web search with citations)
SONAR_API_KEY=YOUR_PERPLEXITY_API_KEY
PERPLEXITY_MODEL=sonar-pro

# ElevenLabs API (Text-to-Speech for audio reports)
ELEVENLABS_API_KEY=YOUR_ELEVENLABS_API_KEY

# Default LLM Provider
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# FINANCIAL DATA PROVIDER API KEYS
# =============================================================================

# Polygon.io API (Real-time & Historical Market Data)
POLYGON_API_KEY=YOUR_POLYGON_API_KEY

# Financial Modeling Prep API (Fundamentals, Financials)
FMP_API_KEY=YOUR_FMP_API_KEY

# Trading Economics API (Macro Data)
TRADING_ECONOMICS_CLIENT_KEY=YOUR_TRADING_ECONOMICS_CLIENT_KEY
TRADING_ECONOMICS_SECRET_KEY=YOUR_TRADING_ECONOMICS_SECRET_KEY

# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=YOUR_FRED_API_KEY

# =============================================================================
# SEC EDGAR (Regulatory Filings)
# =============================================================================
SEC_USER_AGENT=YourCompanyName your-email@example.com
SEC_RATE_LIMIT=10

# =============================================================================
# SOCIAL & ALTERNATIVE DATA
# =============================================================================

# Reddit API (for sentiment analysis)
REDDIT_CLIENT_ID=YOUR_REDDIT_CLIENT_ID
REDDIT_CLIENT_SECRET=YOUR_REDDIT_CLIENT_SECRET
REDDIT_USER_AGENT=InvestmentAgentSystem/1.0

# =============================================================================
# PREFECT WORKFLOW ENGINE
# =============================================================================
PREFECT_API_URL=http://prefect-server:4200/api
PREFECT_SERVER_API_HOST=0.0.0.0
PREFECT_SERVER_API_PORT=4200

# =============================================================================
# OBJECT STORAGE (DigitalOcean Spaces)
# These values will be provided by Terraform after provisioning
# =============================================================================
S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
S3_ACCESS_KEY=YOUR_SPACES_ACCESS_KEY
S3_SECRET_KEY=YOUR_SPACES_SECRET_KEY
S3_BUCKET_NAME=investment-agents-prod
S3_REGION=nyc3

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_TASK_TIMEOUT=300
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=30
MAX_CONCURRENT_RESEARCH=10

# =============================================================================
# RESEARCH CONFIGURATION
# =============================================================================
DEFAULT_RESEARCH_TYPE=standard
RESEARCH_CACHE_TTL=3600

# =============================================================================
# SERVICE URLS (Internal Kubernetes Network)
# =============================================================================
AUTH_SERVICE_URL=http://auth-service:8000
MCA_SERVICE_URL=http://master-control-agent:8000
API_GATEWAY_URL=http://api-gateway:8000
IDEA_GENERATION_AGENT_URL=http://idea-generation-agent:8000
DUE_DILIGENCE_AGENT_URL=http://due-diligence-agent:8000
WORKFLOW_ENGINE_URL=http://workflow-engine:8000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=https://api.yourdomain.com/api
VITE_WS_URL=wss://api.yourdomain.com/ws

# =============================================================================
# CLOUD DEPLOYMENT - DIGITALOCEAN
# =============================================================================
DIGITALOCEAN_TOKEN=YOUR_DIGITALOCEAN_TOKEN
DO_REGION=nyc1
DO_CLUSTER_NAME=investment-agents-cluster
DO_CONTAINER_REGISTRY=investment-agent-system

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://app.yourdomain.com,https://api.yourdomain.com
